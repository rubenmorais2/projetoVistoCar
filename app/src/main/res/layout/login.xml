<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:ignore="UnknownId">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="380dp"
        android:layout_height="109dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/acessar"
        android:layout_width="372dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="48dp"
        android:autofillHints="@string/email"
        android:background="@drawable/form3"
        android:ems="10"
        android:hint="@string/digite_seu_usuario"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />



        <EditText
            android:id="@+id/senha"
            android:layout_width="372dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="48dp"
            android:autofillHints="2"
            android:background="@drawable/form6"
            android:ems="10"
            android:hint="@string/digite_sua_senha"
            android:inputType="textPassword"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/acessar"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints,MissingPrefix"
            app:passwordToggleContentDescription="@string/description"
            app:passwordToggleDrawable="@drawable/olho"
            app:passwordToggleEnabled="true"/>



    <TextView
        android:id="@+id/novoCadastro"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="250dp"
        android:text="@string/novo_cadastro"
        android:textColor="#000070"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintLeft_toLeftOf="@+id/ll_container_fields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/senha"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/Esqueci"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/esqueceu_a_senha"
        android:textColor="#000070"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintLeft_toLeftOf="@+id/ll_container_fields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/novoCadastro"
        app:layout_constraintVertical_bias="0.16" />

    <Button
        android:id="@+id/button"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#F6C01E"
        android:text="@string/botao"
        android:textColor="#000070"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="146dp"
        android:layout_height="28dp"
        android:layout_marginTop="342dp"
        android:backgroundTint="#000070"
        android:buttonTint="#000070"
        android:text="@string/lembrar_senha"
        android:textColor="#000070"
        android:textSize="6pt"
        app:layout_constraintBottom_toTopOf="@+id/TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>
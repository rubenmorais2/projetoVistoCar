<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="bottom"
    android:background="@drawable/vistocarback"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imagemUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:paddingTop="16dp"
        app:srcCompat="@mipmap/ic_launcher_vistocar_round" />

    <TextView
        android:id="@+id/nome_do_usuario"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:contentDescription="@string/imagem"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="usuario"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/sobrenome_do_usuario"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="80dp"
        android:contentDescription="@string/imagem"
        android:text="sobrenome"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


    <TextView
        android:id="@+id/email_do_usuario"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:contentDescription="@string/imagem"
        android:paddingTop="16dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>